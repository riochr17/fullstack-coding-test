<form action="./../../create-new-structure-process" method="post">
    <div class="container mt-4">
        <div class="row justify-content-center g-2 text-center mt-4">
            <div class="col">
                <div class="card border border-0">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="title fw-bold">
                                    Node
                                </div>
                            </div>
                            <div class="col">
                                <div class="title fw-bold">
                                    Parent
                                </div>
                            </div>
                            <div class="col-1"></div>
                        </div>
                        <div id="form_input">
                            <div class="row g-2">
                                <div class="col">        
                                    <div class="form-group mt-2">
                                        <input type="text" class="form-control fw-bold text-center" name="node[]">
                                    </div>
                                </div>
                                <div class="col">                                            
                                    <div class="form-group mt-2">
                                        <input type="text" class="form-control fw-bold text-center" name="parent[]">
                                    </div>
                                </div>
            
                                <div class="col-1">
                                    <div class="button mt-2">
                                        <button type="button" class="btn btn-light btn-block w-100 border border-1 rounded-0">-</button>
                                    </div>
                                </div>
                            </div>
                            
                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <div class="button">
                                    <button type="button" id="add" class="btn btn-dark btn-block w-100 rounded-0">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="card border border-dark">
                    <div class="card-body">
                        <div class="image">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/f/f7/Binary_tree.svg" class="img-fluid">
                        </div>

                        <div class="button mt-2">
                            <button type="submit" class="btn btn-dark btn-block w-100 rounded-0">Save</button>
                        </div>
                    </div>

                </div>

            </div>
            
        </div>
    </div>
</form>
